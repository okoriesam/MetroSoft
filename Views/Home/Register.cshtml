@model Metrosoft.ViewModel.Register

@{
    ViewData["Title"] = "Register Page";
}

<div class="Register text-center">
    <h2 class="display-4">Register User Page</h2>
    
     <form asp-action="Register" asp-controller="Home">
         <div>
            <label>LastName</label>
            <input type="text" asp-for="LastName" required/>
        </div>
         <div>
            <label>FirstName</label>
            <input type="text" asp-for="FirstName" required/>
        </div>
        <div>
            <label>Email</label>
            <input type="email" asp-for="Email" required/>
        </div>
        <div>
            <label>Password</label>
            <input type="password" asp-for="Password" required/>
        </div>
         <button class="Button1 btn btn-primary" type="submit">Register</button>
    </form>
 </div>  
